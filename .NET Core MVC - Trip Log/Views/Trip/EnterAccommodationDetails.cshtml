@model Project1.Models.Trip

@{
    string title = "Enter info for " + ViewBag.AccommodationName;

    ViewBag.Title = title;
}

<h2>@title</h2>
<form asp-action="EnterAccommodationDetails" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.AccommodationPhone">Accommodation Phone:</label>
        <input asp-for="@Model.AccommodationPhone" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.AccommodationEmail">Accommodation Email</label>
        <input asp-for="@Model.AccommodationEmail" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-controller="Trip" asp-action="Cancel" class="btn btn-outline-secondary">Cancel</a>
</form>